{
    "editor.fontSize": 22,
    "editor.formatOnPaste": false,
    "editor.suggestSelection": "first",
    "editor.rulers": [
        100
    ],
    "editor.tabSize": 2,
    "editor.wordWrap": "off",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": true,
    "explorer.excludeGitIgnore": false,
    "files.autoSave": "onFocusChange",
    "files.eol": "\n",
    "search.useGlobalIgnoreFiles": false,
    "search.useIgnoreFiles": false,
    "editor.minimap.enabled": false,
    // tabs
    "workbench.editor.showTabs": "none",
    // "explorer.openEditors.visible": 0,
    // custom 
    "workbench.colorTheme": "Codely Dark",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "workbench.list.smoothScrolling": true,
    "explorer.compactFolders": false,
    "editor.renderWhitespace": "selection",
    "workbench.list.horizontalScrolling": true,
    "workbench.tree.indent": 20,
    "workbench.iconTheme": "symbols",
    "workbench.productIconTheme": "fluent-icons",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.fontFamily": "DankMono Nerd Font",
    "editor.lineHeight": 1.5,
    "terminal.integrated.fontFamily": "DankMono Nerd Font",
    "terminal.integrated.fontSize": 18,
    "breadcrumbs.symbolPath": "off",
    "window.menuBarVisibility": "toggle",
    "window.commandCenter": false, // borra la barra de búsqueda
    "workbench.layoutControl.enabled": false,
    "mssql.enableRichExperiences": true,
    "typescript.updateImportsOnFileMove.enabled": "always", // Oculta el botón "Toggle Layout"
    "angular.experimental-ivy": true,
    "typescript.tsserver.experimental.enableProjectDiagnostics": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "mssql.openQueryResultsInTabByDefaultDoNotShowPrompt": true,
    "mssql.enableQueryHistoryCapture": false,
    "workbench.statusBar.visible": false,
    "chat.commandCenter.enabled": false,
    "workbench.activityBar.location": "hidden"
}